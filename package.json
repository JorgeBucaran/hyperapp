{
    "name": "hyperapp",
    "description": "HyperApp is a 1kb functional JavaScript library for building modern UI applications",
    "version": "0.0.11",
    "main": "src/index.js",
    "author": "Jorge Bucaran",
    "license": "MIT",
    "repository": "hyperapp/hyperapp",
    "keywords": [
        "hyperx",
        "hypertext",
        "functional",
        "virtual-dom",
        "vdom",
        "template string",
        "hyperscript",
        "vanilla"
    ],
    "scripts": {
        "test": "jest --coverage --colors --cache",
        "build": "mkdirp dist && npm run build:hyperapp && npm run build:hyperapp+html",
        "build:hyperapp": "rollup -n hyperapp -cmf umd -o dist/hyperapp.min.js -- src/index.js",
        "build:hyperapp+html": "rollup -n hyperapp -cmf umd -o dist/hyperapp.html.min.js -- src/html.js"
    },
    "dependencies": {
        "hyperx": "^2.0.5"
    },
    "devDependencies": {
        "jest": "^18.1.0",
        "mkdirp": "^0.5.1",
        "rollup": "^0.41.4",
        "rollup-plugin-buble": "^0.15.0",
        "rollup-plugin-commonjs": "^7.0.0",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-uglify": "^1.0.1",
        "rollup-plugin-zopfli": "^1.0.2"
    },
    "jest": {
        "verbose": true
    }
}
